{
    "compileOnSave": true,
    "compilerOptions": {       
        "outDir": "./dist",
        "allowJs": true,
        "lib": ["ES2020"],
        "target": "ES2020",
        "resolveJsonModule": true,
        "module": "commonjs",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules", "dist"],
    "include": ["./src/**/*", "server.ts"]
}
